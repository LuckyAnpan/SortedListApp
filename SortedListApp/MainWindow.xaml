<Window x:Class="SortedListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortedListApp"
        mc:Ignorable="d"
        Title="Pimpawan" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtKey" HorizontalAlignment="Left" Height="30" Margin="221,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" FontSize="16"/>
        <TextBox x:Name="txtValue" HorizontalAlignment="Left" Height="30" Margin="221,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="185" FontSize="16"/>
        <Label Content="Key :" HorizontalAlignment="Left" Height="30" Margin="156,156,0,0" VerticalAlignment="Top" Width="60" FontSize="16"/>
        <Label Content="Value :" HorizontalAlignment="Left" Height="30" Margin="156,0,0,0" VerticalAlignment="Center" Width="60" FontSize="16"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Height="60" Margin="425,156,0,0" VerticalAlignment="Top" Width="100" FontSize="16" Click="btnAdd_Click"/>
        <Button x:Name="btnShow" Content="Show" HorizontalAlignment="Left" Height="60" Margin="541,156,0,0" VerticalAlignment="Top" Width="100" FontSize="16" Click="btnShow_Click"/>

    </Grid>
</Window>
